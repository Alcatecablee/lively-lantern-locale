
{
  "name": "neurolint-vscode",
  "displayName": "NeuroLint",
  "description": "Automated code fixing for React/Next.js projects using AI-powered transformations",
  "version": "1.0.0",
  "publisher": "neurolint",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters",
    "Linters",
    "Other"
  ],
  "keywords": [
    "react",
    "nextjs",
    "typescript",
    "javascript",
    "code-fixing",
    "ai",
    "automation"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "neurolint.transformFile",
        "title": "Transform Current File",
        "category": "NeuroLint"
      },
      {
        "command": "neurolint.transformSelection",
        "title": "Transform Selection",
        "category": "NeuroLint"
      },
      {
        "command": "neurolint.selectLayers",
        "title": "Select Transformation Layers",
        "category": "NeuroLint"
      },
      {
        "command": "neurolint.transformWorkspace",
        "title": "Transform Workspace Files",
        "category": "NeuroLint"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "neurolint.transformFile",
          "when": "editorLangId in neurolint.supportedLanguages",
          "group": "neurolint"
        },
        {
          "command": "neurolint.transformSelection",
          "when": "editorHasSelection && editorLangId in neurolint.supportedLanguages",
          "group": "neurolint"
        }
      ],
      "explorer/context": [
        {
          "command": "neurolint.transformFile",
          "when": "resourceExtname in neurolint.supportedExtensions",
          "group": "neurolint"
        }
      ]
    },
    "configuration": {
      "title": "NeuroLint",
      "properties": {
        "neurolint.enabledLayers": {
          "type": "array",
          "default": [1, 2, 3, 4],
          "description": "Enabled transformation layers",
          "items": {
            "type": "number"
          }
        },
        "neurolint.useAST": {
          "type": "boolean",
          "default": true,
          "description": "Use AST-based transformations when available"
        },
        "neurolint.showDiffPreview": {
          "type": "boolean",
          "default": true,
          "description": "Show diff preview before applying changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@babel/generator": "^7.27.5",
    "@babel/parser": "^7.27.4",
    "@babel/traverse": "^7.27.4",
    "@babel/types": "^7.27.6"
  }
}
